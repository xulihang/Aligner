Sub deleteCell(isSource As Boolean,ta As TextArea)
	Dim p As Pane
	p=ta.Parent
	
	Dim taIndex As Int
	Dim key As String
	If isSource Then
		taIndex=0
		key="source"
	Else
		taIndex=1
		key="target"
	End If
	Dim theOtherIndex As Int
	theOtherIndex=getTheOtherIndex(taIndex)
	
	Dim index As Int
	index=editorLV.Items.IndexOf(p)
	Dim segment As Map=currentProject.segments.Get(index)
	Dim paraMode As Boolean=False
	Dim paraID As Int
	If segment.ContainsKey("id") Then
		paraMode=True
		paraID=segment.Get("id")
	End If
	Dim size As Int
	size=editorLV.Items.Size
	Dim lastIndex As Int=size-1
	For i=index To size-2
		Dim nextIndex As Int=i+1
		Dim bitext As Map
		bitext=currentProject.segments.Get(i)
		Dim nextbitext As Map
		nextbitext=currentProject.segments.Get(nextIndex)
		If paraMode Then
			If nextbitext.GetDefault("id",-1)<>paraID Then
				lastIndex=i
				Exit
			End If
		End If
		
		bitext.Put(key,nextbitext.Get(key))
		If editorLV.Items.Get(i)<>"" Then
			Dim p As Pane
			Dim ta As TextArea
			p=editorLV.Items.Get(i)
			ta=p.GetNode(taIndex)
			ta.Text=bitext.Get(key)
		End If
		If editorLV.Items.Get(nextIndex)<>"" Then
			Dim nextPane As Pane
			nextPane=editorLV.Items.Get(nextIndex)
			Dim nextTa As TextArea
			nextTa=nextPane.GetNode(taIndex)
			nextTa.Text=nextbitext.Get(key)
		End If
	Next
	
	'set the last segment empty


	Dim bitext As Map
	bitext=currentProject.segments.Get(lastIndex)
	bitext.put(key,"")
	If editorLV.Items.Get(lastIndex)<>"" Then
		Dim p As Pane
		p=editorLV.Items.Get(lastIndex)
		Dim ta As TextArea
		ta=p.GetNode(taIndex)
		ta.Text=""
	End If
	
	'remove empty segments
	Dim toRemoveIndexList As List
	toRemoveIndexList.Initialize
	Dim index As Int=0
	For Each bitext As Map In currentProject.segments
		If bitext.Get("source")="" And bitext.Get("target")="" Then
			toRemoveIndexList.Add(index)
		End If
		index=index+1
	Next
	toRemoveIndexList.Sort(False)
	For Each index As Int In toRemoveIndexList
		currentProject.segments.RemoveAt(index)
		editorLV.Items.RemoveAt(index)
	Next
End Sub


Sub getTheOtherIndex(textIndex As Int) As Int
	Dim theOtherIndex As Int
	If textIndex=0 Then
		theOtherIndex=1
	Else
		theOtherIndex=0
	End If
	Return theOtherIndex
End Sub



Sub editorLV_Action
    Dim mi As MenuItem=Sender
	Log(mi.Text)
	Select mi.Text
		Case "Revert"
			Revert
		Case "Merge Source"
			MergeSegments(editorLV.GetSelectedIndices,True)
		Case "Merge Target"
			MergeSegments(editorLV.GetSelectedIndices,False)
		Case "Add Blank Cells to Source"
			AppendBlank(editorLV.GetSelectedIndices,True)
		Case "Add Blank Cells to Target"
			AppendBlank(editorLV.GetSelectedIndices,False)
		Case "View Paragraph"
			ViewParagraph
		Case "Undo/Redo"
			UndoRedo
		Case "Remove warning status"
			Dim segment As Map=currentProject.segments.Get(editorLV.SelectedIndex)
			If segment.ContainsKey("id") Then
				Dim previousSegs As List=getPreviousSegs
				Dim paraID As String=segment.Get("id")
				For Each segment As Map In currentProject.segments
					Dim id As String=segment.Get("id")
					If paraID=id Then
						segment.Remove("complete")
						segment.Remove("accurate")
					End If
				Next
				loadSegmentsToListView(previousSegs)
			End If
	End Select
End Sub

Sub AppendBlank(SelectedIndices As List,isSource As Boolean)
	Dim previousIndex As Int=SelectedIndices.Get(0)
	For i=1 To SelectedIndices.Size-1
		If SelectedIndices.Get(i)-previousIndex<>1 Then
			Return
		End If
		previousIndex=SelectedIndices.Get(i)
	Next
	Dim previousSegs As List=getPreviousSegs
	Dim sourceList,targetList As List
	sourceList.Initialize
	targetList.Initialize
	For Each segment As Map In currentProject.segments
		sourceList.Add(segment.Get("source"))
		targetList.Add(segment.Get("target"))
	Next
	SelectedIndices.Sort(True)
	Dim lastIndex As Int=SelectedIndices.Get(0)
	Dim ListToInsert As List
	ListToInsert.Initialize
	For i=SelectedIndices.Size-1 To 0 Step -1
		ListToInsert.Add("")
	Next
	If isSource Then
		For Each item As String In ListToInsert
			sourceList.InsertAt(lastIndex,item)
		Next
	Else
		For Each item As String In ListToInsert
			targetList.InsertAt(lastIndex,item)
		Next
	End If
	Dim result As Map
	result.Initialize
	result.Put("source",sourceList)
	result.Put("target",targetList)
	currentProject.loadItemsToSegments(result)
	loadSegmentsToListView(previousSegs)
End Sub

Sub Revert
	Dim segment As Map=currentProject.segments.Get(editorLV.SelectedIndex)
	If segment.ContainsKey("id") Then
		Dim id As String=segment.Get("id")
		Dim para As Map=currentProject.paragraphs.Get(id)
		Dim segments As List
		segments.Initialize
		segments.Add(para)
		Dim sv As SegmentsViewer
		sv.Initialize(segments,currentProject,id)
		wait for (sv.SegmentInSilence) complete (done As Object)
		sv.Replace
	End If
End Sub

Sub MergeSegments(SelectedIndices As List,isSource As Boolean)
	Dim size As Int=SelectedIndices.Size
	If size<=1 Then
		Return
	End If
	Dim previousSegs As List=getPreviousSegs
	Dim previousIndex As Int=SelectedIndices.Get(0)
	For i=1 To SelectedIndices.Size-1
		If SelectedIndices.Get(i)-previousIndex<>1 Then
			Return
		End If
		previousIndex=SelectedIndices.Get(i)
	Next
	
	Dim key As String
	Dim lang As String
	Dim langPair As Map=currentProject.getProjectFileValue("langPair")
	If isSource Then
		key="source"
		lang=langPair.Get("source")
	Else
		key="target"
		lang=langPair.Get("target")
	End If
	Dim whiteSpace As String
	If Utils.LanguageHasSpace(lang) Then
		whiteSpace=" "
	Else
		whiteSpace=""
	End If
	Dim text As String
	For Each index As Int In SelectedIndices
		Dim segment As Map=currentProject.segments.Get(index)
		text=text&whiteSpace&segment.Get(key)
	Next
	Dim firstSegment As Map=currentProject.segments.Get(SelectedIndices.Get(0))
	firstSegment.Put(key,text.Trim)

	'set the next segments empty
	For i=1 To SelectedIndices.Size-1
		Dim bitext As Map
		bitext=currentProject.segments.Get(SelectedIndices.Get(i))
		bitext.put(key,"")
	Next
	loadSegmentsToListView(previousSegs)
End Sub

Sub getPreviousSegs As List
	Dim json As JSONGenerator
	json.Initialize2(currentProject.segments)
	Dim jsonP As JSONParser
	jsonP.Initialize(json.ToString)
	Return jsonP.NextArray
End Sub

Sub UndoRedo
	If previousSegments.IsInitialized Then
		Dim previousSegs As List=getPreviousSegs
		currentProject.segments.clear
		currentProject.segments.AddAll(previousSegments)
		loadSegmentsToListView(previousSegs)
	End If
End Sub

Sub ViewParagraph
	Dim segment As Map=currentProject.segments.Get(editorLV.SelectedIndex)
	If segment.ContainsKey("id") Then
		Dim id As String=segment.Get("id")
		Dim para As Map=currentProject.paragraphs.Get(id)
		Dim segments As List
		segments.Initialize
		segments.Add(para)
		Dim sv As SegmentsViewer
		sv.Initialize(segments,currentProject,id)
		sv.Show
	Else
		fx.Msgbox(MainForm,segment,"")
	End If
End Sub



