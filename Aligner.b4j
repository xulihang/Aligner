Sub exportToXLSX
	If currentProject.IsInitialized Then
		Dim fc As FileChooser
		fc.Initialize
		fc.SetExtensionFilter("XLSX",Array As String("*.xlsx"))
		Dim path As String = fc.ShowSave(MainForm)
		If path="" Then
			Return
		End If
		Dim wb As PoiWorkbook
		wb.InitializeNew(True)
		Dim sheet1 As PoiSheet = wb.AddSheet("Sheet1",0)
		Dim head As PoiRow=sheet1.CreateRow(0)
		Dim langPair As Map=currentProject.getProjectFileValue("langPair")
		head.CreateCellString(0,langPair.Get("source"))
		head.CreateCellString(1,langPair.Get("target"))
		For Each segment As Map In currentProject.segments
			Dim source,target As String
			source=segment.Get("source")
			target=segment.Get("target")
			Dim rowNumber As Int
			rowNumber=sheet1.LastRowNumber+1
			Dim row As PoiRow=sheet1.CreateRow(rowNumber)
			row.CreateCellString(0,source)
			row.CreateCellString(1,target)
		Next
		wb.Save(path,"")
		fx.Msgbox(MainForm,"Done","")
	End If
End Sub

Sub exportToTMX
	If currentProject.IsInitialized Then
		If currentProject.segments.Size<>0 Then
			Dim fc As FileChooser
			fc.Initialize
			fc.SetExtensionFilter("TMX",Array As String("*.tmx"))
			Dim path As String = fc.ShowSave(MainForm)
			If path="" Then
				Return
			End If
			
			Dim includeTags As Boolean=True
			Dim useTMXTags As Boolean=True
			Dim response As Int
			response=fx.Msgbox2(MainForm,"include tags?","","Yes","Cancel","No",fx.MSGBOX_CONFIRMATION)
			Select response
				Case fx.DialogResponse.CANCEL
					Return
				Case fx.DialogResponse.POSITIVE
					includeTags=True
				Case fx.DialogResponse.NEGATIVE
					includeTags=False
			End Select
            If includeTags Then
				Dim result2 As Int
				result2=fx.Msgbox2(MainForm,"How to handle tags?","","Keep the original format","Cancel","Conform to TMX Specification",fx.MSGBOX_CONFIRMATION)
				Select result2
					Case fx.DialogResponse.CANCEL
						Return
					Case fx.DialogResponse.POSITIVE
						useTMXTags=False
					Case fx.DialogResponse.NEGATIVE
						useTMXTags=True
				End Select
           End If

			Dim segments As List
			segments.Initialize
			For Each segment As Map In DuplicateRemovedSegments(currentProject.segments)
				Dim source,target,note As String
				source=segment.Get("source")
				target=segment.Get("target")
				note=segment.GetDefault("note","")
				If source="" Or target="" Then
					Continue
				End If
				Dim bitext As Map
				bitext.Initialize
				bitext.Put("source",source)
				bitext.Put("target",target)
				bitext.Put("note",note)
				segments.Add(bitext)
			Next
			Dim langPair As Map
			langPair=currentProject.getProjectFileValue("langPair")
			'TMX.export(segments,langPair.Get("source"),langPair.Get("target"),path,False,False)
			TMX.exportQuick(segments,langPair.Get("source"),langPair.Get("target"),path,includeTags,useTMXTags)
			fx.Msgbox(MainForm,"Done.","")
		End If
	End If
End Sub

Sub exportSourceToTxt
	If currentProject.IsInitialized Then
		If currentProject.segments.Size<>0 Then
			Dim fc As FileChooser
			fc.Initialize
			fc.SetExtensionFilter("Txt",Array As String("*.txt"))
			Dim path As String = fc.ShowSave(MainForm)
			If path="" Then
				Return
			End If
			Dim sourceList As List
			sourceList.Initialize
			For Each segment As Map In currentProject.segments
				Dim source As String=segment.Get("source")
				If segment.ContainsKey("id") Then
					Dim id As String=segment.Get("id")
					Dim para As Map=currentProject.paragraphs.Get(id)
					If para.Get("size")<=1 Then
						Continue
					End If
				End If
				If source<>"" Then
					sourceList.Add(source)
				End If
			Next
			File.WriteList(path,"",sourceList)
			fx.Msgbox(MainForm,"Done.","")
		End If
	End If
