Sub MenuBar1_Action
	Dim mi As MenuItem
	mi=Sender
	Select mi.Text
		Case "_About"
			fx.Msgbox(MainForm,"Aligner"&CRLF&"@xulihang 2020","About")
		Case "_Exit"
			ExitApplication
		Case "_New"
			If currentProject.IsInitialized Then
				fx.Msgbox(MainForm,"Please first close this project","")
				Return
			End If
			newProject
		Case "_Open"
			openProject
		Case "_Save"
			saveProject
		Case "_Close"
			closeProject
		Case "separate source file and target file"
			If currentProject.IsInitialized Then
				Dim filesPicker As BiTextFilesPicker
				filesPicker.Initialize
				Dim result As Map=filesPicker.ShowAndWait(currentProject.getProjectFileValue("langPair"))
				If result.ContainsKey("source")=False Then
					Return
				End If
				currentProject.loadItemsToSegments(result)
				loadSegmentsToListView(Null)
			End If
		Case "bilingual file"
			If currentProject.IsInitialized Then
				Dim fc As FileChooser
				fc.Initialize
				'fc.SetExtensionFilter("Bilingual Files",Array As String("*.docx","*.txt","*.tmx","*.xlf","*.json"))
				Dim descriptionList,filterList As List
				descriptionList.Initialize
				filterList.Initialize
				descriptionList.AddAll(Array As String("docx file","txt file","tmx file","BasicCAT workfile"))
				filterList.AddAll(Array As String("*.docx","*.txt","*.tmx","*.json"))
				FileChooserUtils.AddExtensionFilters4(fc,descriptionList,filterList,True,"All",True)
				Dim path As String=fc.ShowOpen(MainForm)
				Dim result As Map
				result.Initialize
				Dim langPair As Map
				langPair=currentProject.getProjectFileValue("langPair")
				If File.Exists(path,"") Then
					If path.ToLowerCase.EndsWith(".docx") Then
						result=openxmlFilter.getBitext(path,langPair,askHighPrecision)
					Else if path.ToLowerCase.EndsWith(".txt") Then
						result=txtFilter.getBitext(path,langPair,askHighPrecision)
					Else if path.ToLowerCase.EndsWith(".tmx") Then
						result=TMX.getBitext(path,langPair)
					Else if path.ToLowerCase.EndsWith(".json") Then
						result=workfileFilter.getBitext(path)
					Else if path.ToLowerCase.EndsWith(".xlf") Then
						result=xliffFilter.getBitext(path)
                    Else
						fx.Msgbox(MainForm,"Not supported","")
						Return
					End If
					currentProject.loadItemsToSegments(result)
					loadSegmentsToListView(Null)
				End If
			End If
		Case "bilingual ass file"
			If currentProject.IsInitialized Then
				Dim assFilePicker As AssPicker
				assFilePicker.Initialize
				Dim result As Map=assFilePicker.ShowAndWait
				If result.ContainsKey("source")=False Then
					Return
				End If
				currentProject.loadItemsToSegments(result)
				loadSegmentsToListView(Null)
			End If
		Case "Aligner project"
			If currentProject.IsInitialized Then
				Dim fc As FileChooser
				fc.Initialize
				fc.SetExtensionFilter("Aligner projects",Array As String("*.alp"))
				Dim path As String=fc.ShowOpen(MainForm)
				If File.Exists(path,"") Then
					Dim project1 As Project
					project1.Initialize(path)
					project1.readProjectFile
					currentProject.segments.AddAll(project1.segments)
					loadSegmentsToListView(Null)
				End If
			End If
		Case "Read from _Clipboard"
			Dim langPair As Map
			langPair=currentProject.getProjectFileValue("langPair")
			Dim creader As ClipboardReader
			creader.Initialize(langPair)
			Dim result As Map=creader.ShowAndWait
			If result.ContainsKey("source")=False Then
				Return
			End If
			currentProject.loadItemsToSegments(result)
			loadSegmentsToListView(Null)
		Case "DOCX"
			exportToDocx
		Case "TXT"
			exportToTxt
		Case "TMX"
			exportToTMX
		Case "XLSX"
			exportToXLSX
		Case "XLIFF"
			exportToXLIFF
		Case "_Segment into sentences"
			If currentProject.IsInitialized Then
				Dim previousSegs As List=getPreviousSegs
				Dim srxfilePicker As SrxPicker
				srxfilePicker.Initialize
				Dim srxPath As String=srxfilePicker.ShowAndWait
				wait for (currentProject.loadSegmentsInSentenceLevel(srxPath)) Complete (temp As Object)
				loadSegmentsToListView(previousSegs)
			End If
		Case "Remove specific segments"
			If currentProject.IsInitialized Then
				Dim sr As SegmentsRemover
				sr.Initialize
				sr.Show
			End If
		Case "Go to the next _empty segment"
			GotoTheNextEmptySegment
		Case "Go to the next segment with _issues"
			GotoTheNextSegmentWithIssues
		Case "Count words"
			Dim langPair As Map
			langPair=currentProject.getProjectFileValue("langPair")
			Dim s As statistics
			s.Initialize(langPair)
			s.MsgBox(MainForm,currentProject.segments)
		Case "Clean tags"
			CleanTags
		Case "Align with LF Aligner"
			If currentProject.IsInitialized Then
				Dim previousSegs As List=getPreviousSegs
				wait for (AlignWithLFAligner) Complete (temp As Object)
				loadSegmentsToListView(previousSegs)
			End If
		Case "Align"
			If currentProject.IsInitialized Then
				Dim previousSegs As List=getPreviousSegs
				wait for (ReAlignWithBleualign) Complete (temp As Object)
				loadSegmentsToListView(previousSegs)
			End If
		Case "Export Source to TXT for Translation"
			exportSourceToTxt
	End Select
End Sub

Sub GotoTheNextEmptySegment
	For index=currentIndex To currentProject.segments.Size-1
		Dim segment As Map = currentProject.segments.Get(index)
		Dim source,target As String
		source=segment.Get("source")
		target=segment.Get("target")
		If source="" Or target="" Then
			editorLV.ScrollTo(Max(0,index-2))
			If Abs(currentIndex-index)>20 Then
				Sleep(500)
				editorLV.ScrollTo(Max(0,index-2))
			End If
			Return
		End If
	Next
End Sub

Sub GotoTheNextSegmentWithIssues
	For index=currentIndex To currentProject.segments.Size-1
		Dim segment As Map = currentProject.segments.Get(index)
		If segment.GetDefault("complete",True)=False Or segment.GetDefault("accurate",True)=False Then
			editorLV.ScrollTo(Max(0,index-2))
			If Abs(currentIndex-index)>20 Then
				Sleep(500)
				editorLV.ScrollTo(Max(0,index-2))
			End If
			Return
        End If
	Next
End Sub

Public Sub RemoveRange(startIndex As Int,EndIndex As Int)
	Dim new As List
	new.Initialize
	For index=0 To currentProject.segments.Size-1
		If index<startIndex Or index>EndIndex Then
			new.Add(currentProject.segments.Get(index))
		End If
	Next
	Dim previousSegs As List=getPreviousSegs
	currentProject.segments.Clear
	currentProject.segments.AddAll(new)
	loadSegmentsToListView(previousSegs)
End Sub

Public Sub RemoveDuplicate
	Dim new As List
	new.Initialize
	Dim map1 As Map
	map1.Initialize
	Dim sizeBefore,sizeAfter As Int
	sizeBefore=currentProject.segments.Size
	For Each segment As Map In currentProject.segments
		Dim source As String = segment.Get("source")
		Dim target As String = segment.Get("target")
		If source="" Then
			new.Add(segment)
			Continue
		End If
		If map1.ContainsKey(source) Then
			If map1.Get(source)=target Then 'duplicate
				Continue
			End If
		Else
			map1.Put(source,target)
		End If
		new.Add(segment)
	Next
	sizeAfter=new.Size
	Dim previousSegs As List=getPreviousSegs
	currentProject.segments.Clear
	currentProject.segments.AddAll(new)
	loadSegmentsToListView(previousSegs)
	fx.Msgbox(MainForm,(sizeAfter-sizeBefore)&" segments removed","")
End Sub

Sub DuplicateRemovedSegments(segments As List) As List
	Dim new As List
	new.Initialize
	Dim map1 As Map
	map1.Initialize
	For Each segment As Map In segments
		Dim source,target As String
		source=segment.Get("source")
		target=segment.Get("target")
		If map1.ContainsKey(source) Then
			Continue
		Else
			new.Add(segment)
			map1.Put(source,target)
		End If
	Next
	Return new
End Sub

Public Sub CleanTags
	Dim previousSegs As List=getPreviousSegs
	For Each segment As Map In currentProject.segments
		Dim source,target As String
		source=segment.Get("source")
		target=segment.Get("target")
		segment.Put("source",Regex.Replace("<.*?>",source,""))
		segment.Put("target",Regex.Replace("<.*?>",target,""))
	Next
	loadSegmentsToListView(previousSegs)
End Sub

Public Sub RemoveSegments(segmentsText As List,isSource As Boolean)
	Dim sourceList,targetList As List
	sourceList.Initialize
	targetList.Initialize
	For Each segment As Map In currentProject.segments
		Dim source,target As String
		source=segment.Get("source")
		target=segment.Get("target")
		If segmentsText.IndexOf(source)=-1 Then
			sourceList.Add(source)
		End If
		If target<>"" Then
			targetList.Add(target)
		End If
	Next
	Dim result As Map
	result.Initialize
	result.Put("source",sourceList)
	result.Put("target",targetList)
	Dim previousSegs As List=getPreviousSegs
	currentProject.loadItemsToSegments(result)
	loadSegmentsToListView(previousSegs)
End Sub

Public Sub RemoveEmptySegments
	Dim new As List
	new.Initialize
	For Each segment As Map In currentProject.segments
		Dim source,target As String
		source=segment.Get("source")
		target=segment.Get("target")
        If source.Trim="" And target.Trim="" Then
		    Continue
		Else
			new.Add(segment)
        End If
	Next
	Dim previousSegs As List=getPreviousSegs
    currentProject.segments.Clear
    currentProject.segments.AddAll(new)
